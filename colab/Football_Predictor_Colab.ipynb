    "# â”€â”€â”€ CELULA 3: Backend complet inline â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€\n",
    "# CopiaÈ›i conÈ›inutul fiÈ™ierelor .py din folder-ul backend/ aici\n",
    "# sau rulaÈ›i: exec(open('/content/backend/main.py').read())\n",
    "\n",
    "# ====== DEMO STANDALONE (fÄƒrÄƒ fiÈ™iere externe) ======\n",
    "import numpy as np\n",
    "from scipy.stats import poisson\n",
    "import math\n",
    "\n",
    "class EloEngine:\n",
    "    BASE_RATING = 1500\n",
    "    HOME_ADVANTAGE = 100\n",
    "\n",
    "    def __init__(self):\n",
    "        self.ratings = {\n",
    "            'Manchester City': 1820, 'Arsenal': 1760, 'Liverpool': 1790,\n",
    "            'Chelsea': 1710, 'Real Madrid': 1870, 'Barcelona': 1830,\n",
    "        }\n",
    "\n",
    "    def get_rating(self, team):\n",
    "        return self.ratings.get(team, self.BASE_RATING)\n",
    "\n",
    "    def expected_score(self, ra, rb):\n",
    "        return 1 / (1 + 10 ** ((rb - ra) / 400))\n",
    "\n",
    "    def predict(self, home, away):\n",
    "        ra = self.get_rating(home) + self.HOME_ADVANTAGE\n",
    "        rb = self.get_rating(away)\n",
    "        p_home = self.expected_score(ra, rb)\n",
    "        diff = abs(ra - rb)\n",
    "        draw = 0.26 * math.exp(-diff / 600)\n",
    "        p_away = 1 - p_home - draw\n",
    "        return {'home': round(p_home*100,1), 'draw': round(draw*100,1), 'away': round(p_away*100,1)}\n",
    "\n",
    "class PoissonModel:\n",
    "    def tau(self, x, y, lam, mu, rho=-0.13):\n",
    "        if x==0 and y==0: return 1 - lam*mu*rho\n",
    "        elif x==0 and y==1: return 1 + lam*rho\n",
    "        elif x==1 and y==0: return 1 + mu*rho\n",
    "        elif x==1 and y==1: return 1 - rho\n",
    "        return 1\n",
    "\n",
    "    def predict(self, lam, mu):\n",
    "        matrix = np.zeros((8, 8))\n",
    "        for i in range(8):\n",
    "            for j in range(8):\n",
    "                matrix[i][j] = self.tau(i,j,lam,mu) * poisson.pmf(i,lam) * poisson.pmf(j,mu)\n",
    "        matrix /= matrix.sum()\n",
    "        scores = []\n",
    "        for i in range(8):\n",
    "            for j in range(8):\n",
    "                scores.append({'score': f'{i}:{j}', 'prob': round(matrix[i][j]*100, 2)})\n",
    "        scores.sort(key=lambda x: x['prob'], reverse=True)\n",
    "        return {\n",
    "            'home': round(np.tril(matrix,-1).sum()*100, 1),\n",
    "            'draw': round(np.trace(matrix)*100, 1),\n",
    "            'away': round(np.triu(matrix,1).sum()*100, 1),\n",
    "            'top_scores': scores[:10]\n",
    "        }\n",
    "\n",
    "print('âœ… Modele Ã®ncÄƒrcate')"
   ],
