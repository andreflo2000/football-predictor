    "# â”€â”€â”€ CELULA 7: Heatmap scoruri â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€\n",
    "import seaborn as sns\n",
    "\n",
    "matrix = np.zeros((6, 6))\n",
    "for i in range(6):\n",
    "    for j in range(6):\n",
    "        from scipy.stats import poisson as pss\n",
    "        dc_tau = 1\n",
    "        if i==0 and j==0: dc_tau = 1 - lam*mu*(-0.13)\n",
    "        elif i==0 and j==1: dc_tau = 1 + lam*(-0.13)\n",
    "        elif i==1 and j==0: dc_tau = 1 + mu*(-0.13)\n",
    "        elif i==1 and j==1: dc_tau = 1 - (-0.13)\n",
    "        matrix[i][j] = dc_tau * pss.pmf(i, lam) * pss.pmf(j, mu)\n",
    "matrix /= matrix.sum()\n",
    "\n",
    "fig, ax = plt.subplots(figsize=(8, 6))\n",
    "fig.patch.set_facecolor('#050f08')\n",
    "ax.set_facecolor('#050f08')\n",
    "\n",
    "sns.heatmap(\n",
    "    matrix * 100, annot=True, fmt='.1f', cmap='Greens',\n",
    "    xticklabels=[f'{j}' for j in range(6)],\n",
    "    yticklabels=[f'{i}' for i in range(6)],\n",
    "    ax=ax, cbar_kws={'label': 'Probabilitate (%)'}\n",
    ")\n",
    "ax.set_xlabel('Goluri Arsenal (oaspete)', color='#4a6b50')\n",
    "ax.set_ylabel('Goluri Man City (gazdÄƒ)', color='#4a6b50')\n",
    "ax.set_title('Heatmap Scoruri Poisson Dixon-Coles', color='white', pad=15)\n",
    "ax.tick_params(colors='#4a6b50')\n",
    "plt.tight_layout()\n",
    "plt.savefig('heatmap.png', dpi=150, bbox_inches='tight', facecolor='#050f08')\n",
